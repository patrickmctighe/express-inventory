<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>

<body>
    <header><%- include("./partials/header") %></header>
<div class="deleteForm"><h1><%= title %></h1>

    <p>Are you sure you want to delete this type: <%= type.type_name %>?</p>

    <form method="POST" action="<%= `/catalog/type/${type._id}/delete` %>" id="myForm">
        <script>
            document.addEventListener("DOMContentLoaded", function() {
              document.getElementById("myForm").addEventListener("submit", function(event) {
                const secretString = "youFoundIt"; // Replace with your actual secret string
                const userInput = document.getElementById("myInput").value;
            
                if (userInput !== secretString) {
                  alert("Invalid Password.");
                  event.preventDefault(); // Prevent the form from submitting
                }
              });
            });
            </script>
             <div class="formPass">
                <label for="myInput">Password:</label>
                <div class="inputSubmit"> <input type="password" id="myInput" name="secretInput" required />
                 <button type="submit">Delete</button></div>
               
              </div>
    </form>
    </div>
    

</body>

</html>